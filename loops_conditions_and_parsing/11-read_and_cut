#!/usr/bin/env bash
# This script reads the content of /etc/passwd line by line using a while loop 
# and displays only the username, user ID (UID), and home directory path.

# The /etc/passwd file structure is: Username:x:UID:GID:GECOS:HomeDirectory:Shell

# Set IFS to colon (:) and read the file content line by line.
# F1, F3, and F6 store the required data. Underscores (_) ignore unused fields.
while IFS=: read -r F1 _ F3 _ _ F6 _; do
    # F1: Username (Sahə 1)
    # F3: User ID (Sahə 3)
    # F6: Home directory path (Sahə 6)
    
    # We print the required fields separated by a colon (:)
    echo "${F1}:${F3}:${F6}"
done < /etc/passwd
